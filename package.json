{
  "name": "hexymon",
  "description": "A daily linguistic puzzle game connecting words through etymology.",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build": "pnpm run build:data && pnpm run build:app",
    "build:app": "vite build",
    "build:data": "tsx scripts/prepare-etymology-data.ts && pnpm run validate:data",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "dev": "vite dev",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "prepare": "svelte-kit sync || echo ''",
    "preview": "vite preview",
    "test": "pnpm run test:unit -- --run && pnpm run test:e2e",
    "test:e2e": "playwright test",
    "test:unit": "vitest",
    "validate:data": "tsx scripts/validate_puzzles.ts"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.39.1",
    "@netlify/vite-plugin": "^2.7.19",
    "@playwright/test": "^1.57.0",
    "@sveltejs/adapter-netlify": "^5.2.4",
    "@sveltejs/kit": "^2.49.5",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/vite": "^4.1.17",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^22",
    "@vitest/browser-playwright": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.13.1",
    "globals": "^16.5.0",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "svelte": "^5.45.6",
    "svelte-check": "^4.3.4",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vite": "^7.2.6",
    "vitest": "^4.0.15",
    "vitest-browser-svelte": "^2.0.1"
  },
  "dependencies": {
    "canvas-confetti": "^1.9.4"
  }
}
